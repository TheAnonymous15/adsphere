# AdSphere Python System - Environment Configuration

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# Database
DATABASE_URL=sqlite:///./app/database/adsphere.db
DATABASE_ECHO=false

# Admin Configuration
ADMIN_EMAIL=admin@adsphere.com
ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=changeme

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8001","http://localhost:8003","http://localhost:8004"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Moderation Service Integration
MODERATION_SERVICE_URL=http://localhost:8002
MODERATION_SERVICE_ENABLED=true

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
SESSION_TIMEOUT_HOURS=24
ADMIN_SESSION_TIMEOUT_HOURS=1

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=AdSphere
TWO_FACTOR_WINDOW=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/adsphere.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Development
DEBUG=false
RELOAD=true
WORKERS=4

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_COMPANY_REGISTRATION=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_CONTACT_TRACKING=true
ENABLE_AI_MODERATION=true

